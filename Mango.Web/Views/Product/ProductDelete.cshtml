@model Mango.Web.Models.ProductRequestDto


<form asp-action="ProductDelete">
    <input asp-for="ProductId" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="text-info">Delete Product</h1>
        <hr />
        <div class="row">
            <div class="col-2">
                <label asp-for="ProductName" class="control-label pt-2" style="font-size:20px;">Name</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ProductName" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="ProductCategoryName" class="control-label pt-2" style="font-size:20px;">Category Name</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ProductCategoryName" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="ProductDescription" class="control-label pt-2" style="font-size:20px;">Description</label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="ProductDescription" disabled class="form-control" rows="5"></textarea>
            </div>
            <div class="col-2">
                <label asp-for="ImageUrl" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ImageUrl" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="ProductPrice" class="control-label pt-2" style="font-size:20px;">Price</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ProductPrice" disabled class="form-control" />
            </div>
            <div class="col-5 offset-2">

                <a asp-action="ProductIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
